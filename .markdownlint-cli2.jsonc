{
    "config": {
        "default": true,
        "MD013": false, // Line length
        "MD033": false, // Inline HTML
        "MD041": false, // First line must be h1
        "MD024": false, // Multiple headers with same content
        "MD034": false // Bare URL used
    },
    "globs": [
        "**/*.md"
    ],
    "ignores": [
        "node_modules",
        ".next",
        ".git",
        "frontend/node_modules",
        "frontend/.next",
        "venv",
        "__pycache__"
    ]
}